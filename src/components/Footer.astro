---
import NameLogo from "./NameLogo.astro";
import Link from "./Link.astro";
---

<div class="container mx-auto">
	<div class="flex justify-between items-center my-6 flex-col md:flex-row gap-y-8">
		<a href="/" class="flex items-center h-12 w-24">
			<NameLogo />
		</a>
		<div>
			<ul class="flex flex-col gap-4">
				<li><Link href="/docs" content="Docs" /></li>
				<li><Link href="/download" content="Download" /></li>
				<li>
					<Link
						href="https://github.com/TheophilusNenhanga/crux-lang"
						content="Source"
					/>
				</li>
			</ul>
		</div>
		<div class="flex flex-col gap-4">
			<p class="text-gray-200">Theophilus N Nenhanga</p>
			<p class="text-gray-200">&copy; {new Date().getFullYear()}</p>
		</div>
	</div>
</div>
