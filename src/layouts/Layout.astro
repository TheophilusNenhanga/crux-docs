---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

type Props = {
	title: string;
};
const props = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>crux lang {props.title ? `| ${props.title}` : ""}</title>
	</head>

	<body
		class="font-sans grid grid-rows-[auto_1fr_auto] h-screen bg-neutral-900"
	>
		<header>
			<Navbar />
		</header>

		<main class="pt-20 text-neutral-900 dark:text-neutral-300 container mx-auto">
			<slot />
		</main>

		<footer class="bg-neutral-800 z-50">
			<Footer />
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
